<%- include("templates/header") %> 
<div class="container">
    <h1>Sign-Up</h1>
    <form action="/createUser" method="post">
        <input class="input-field" name="username" type="text" placeholder="username">
        <input class="input-field" name="email" type="text" placeholder="email">
        <input class="input-field" name="password" type="password" placeholder="password">
        <button class="signup-button">Sign Up</button> 
    </form>

    <a href="/login"><button class="login-button" type="button">Login</button></a> <br>
    <% if (userMsg != "undefined") { %>
        <br><br><%=userMsg%>
    <% }  
    if (emailMsg != "undefined") { %>
        <br><br> <%=emailMsg%>
    <% }  
    if (passMsg != "undefined") { %>
        <br><br> <%=passMsg%>
    <% } %>
</div>

<%- include("templates/footer") %> 